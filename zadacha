// - Реализовать алгоритм пирамидальной сортировки (сортировка кучей).
общедоступный класс HeapSort {
    общедоступная статическая пустотная сортировка(int arr[]) {
        int n = arr.длина;

        // построение кучи (heapify)
        для (int i = n / 2 - 1; i >= 0; i--)
            нагромождать(arr, n, i);

        // извлечение элементов из кучи и помещение в конец массива
        для (int i = n - 1; i >= 0; i--) {
            // перемещение текущего корня в конец
            int temp = arr[0];
            arr[0] = arr[i];
            arr[i] = temp;

            // вызов heapify на уменьшенной куче
            нагромождать(arr, i, 0);
        }
    }

    частная статическая пустота heapify(int arr[], int n, int i) {
        int largest = i; // корень
        int l = 2 * i + 1; // левый потомок
        int r = 2 * i + 2; // правый потомок

        // если левый потомок больше корня
        если (l < n && arr[l] > arr[наибольший])
            самый большой = l;

        // если правый потомок больше корня
        если (r < n && arr[r] > arr[наибольший])
            наибольший = r;

        // если корень не больше потомков
        если (наибольший != i) {
            int swap = arr[i];
            arr[i] = arr[самый ;,,
            arr[самый большой] = swap;

            // рекурсивный вызов heapify для поддерева
            нагромождать(обьем, n, наибольший);
        }
    }
}
